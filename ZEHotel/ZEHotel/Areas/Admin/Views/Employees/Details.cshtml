@model Employee

@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-12">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title font-weight-bold">İşçilər</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="d-flex">
                    <img style="width:280px; height:140px; object-fit:contain" src="~/assets/images/employee/@Model.Image" />
                    <div class="d-inline-block ml-5">
                        <h5><b>İşçinin tam adı: @Model.FullName</b></h5>
                        <div>İşçinin e-mail adresi: @Model.Email</div>
                        <div>İşçinin əlaqə nömrəsi: @Model.Phone</div>
                        <div>İşçinin maaşı: @Model.Salary</div>
                        <div>İşçinin vəzifəsi: @Model.Position.Name</div>
                    </div>
                </div>

            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <div>
                    <a class="btn btn-primary btn-md" asp-action="Edit" asp-route-id="@Model.Id">Düzəliş Et</a>
                    <a class="btn btn-secondary btn-md my-3" asp-action="Index">Geri</a>
                </div>
            </div>
        </div>
        <!-- /.card -->
    </div>
</div>