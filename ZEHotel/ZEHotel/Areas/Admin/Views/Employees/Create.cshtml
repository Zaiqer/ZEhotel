@model Employee

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Yeni İşçi</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form method="post" enctype="multipart/form-data">
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Photo">İşçinin Şəkli</label>
                        <div class="input-group">
                            <div class="custom-file">
                                <input asp-for="Photo" type="file" class="custom-file-input">
                                <label asp-for="Photo" class="custom-file-label">Fayl Seç</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName">İşçinin Tam Adı</label>
                        <input asp-for="FullName" class="form-control" placeholder="Tam ad...">
                        <span asp-validation-for="FullName" class="alert-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email">İşçinin Mail Adresi</label>
                        <input asp-for="Email" class="form-control" placeholder="E-mail adresi...">
                        <span asp-validation-for="Email" class="alert-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone">İşçinin Əlaqə Nömrəsi</label>
                        <input asp-for="Phone" class="form-control" placeholder="Əlaqə nömrəsi...">
                        <span asp-validation-for="Phone" class="alert-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Salary">İşçinin Maaşı</label>
                        <input asp-for="Salary" class="form-control" placeholder="Maaş...">
                        <span asp-validation-for="Salary" class="alert-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Vəzifə Seçimi</label>
                        <select class="form-control" name="posId">
                            @foreach (Position item in ViewBag.Positions)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a asp-action="Index" class="btn btn-secondary">Geri</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}