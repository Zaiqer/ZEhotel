@model Employee

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Düzəliş Et</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form method="post" enctype="multipart/form-data">
                <div class="card-body">
                    <div class="d-flex justify-content-center my-3">
                        <img style="width:180px; height:180px; object-fit:contain" src="~/assets/images/employee/@Model.Image" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Photo">İşçinin şəkli...</label>
                        <div class="input-group">
                            <div class="custom-file">
                                <input asp-for="Photo" type="file" class="custom-file-input">
                                <label asp-for="Photo" class="custom-file-label">Fayl Seç</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName">İşçinin tam adı...</label>
                        <input asp-for="FullName" class="form-control" placeholder="Otaq nömrəsi...">
                        <span asp-validation-for="FullName" class="alert-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email">İşçinin mail adresi...</label>
                        <input asp-for="Email" class="form-control" placeholder="Otaq tipi...">
                        <span asp-validation-for="Email" class="alert-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone">İşçinin əlaqə nömrəsi...</label>
                        <input asp-for="Phone" class="form-control" placeholder="Otağın qiyməti...">
                        <span asp-validation-for="Phone" class="alert-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Salary">İşçinin maaşı...</label>
                        <input asp-for="Salary" class="form-control" placeholder="Otağın həcmi...">
                        <span asp-validation-for="Salary" class="alert-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Vəzifə seçimi...</label>
                        <select class="form-control">
                            @foreach (Position item in ViewBag.Positions)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a asp-action="Index" class="btn btn-secondary ml-2">Geri</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}